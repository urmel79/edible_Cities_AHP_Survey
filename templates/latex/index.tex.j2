    \setcounter{biburlucpenalty}{8000}  %ditto
    ((*- endif *))
((*- endif *))

((* endblock packages *))

%==============================================================================
% Block commands
%==============================================================================

((* block commands *))
    % Prevent overflowing lines due to hard-to-break entities
    \sloppy

((*- if nb.metadata["latex_metadata"]: -*))
((*- if nb.metadata["latex_metadata"]["author"]: -*))
    ((*- set nb_author = nb.metadata["latex_metadata"]["author"] -*))
((*- endif *))
((*- if nb.metadata["latex_metadata"]["author1"]: -*))
    ((*- set nb_author = nb.metadata["latex_metadata"]["author1"] -*))
((*- endif *))
((*- endif *))

    % Setup hyperref package
    \hypersetup{
      breaklinks=true,  % so long urls are correctly broken across lines
      bookmarksnumbered=true,
      pdfauthor=((( nb_author ))),
      pdftitle=((( nb.metadata["latex_metadata"]["title"] ))),
      colorlinks=true,
      urlcolor=urlcolor,
      linkcolor=linkcolor,
      citecolor=citecolor,
      pdfpagemode={UseOutlines},
      pdfview = {XYZ},
      pdfstartview = {XYZ},
      pdfstartpage = {1},
      pdfborder={0 0 0}
      }
    % Slightly bigger margins than the latex defaults
    \geometry{verbose,tmargin=1in,bmargin=1in,lmargin=1in,rmargin=1in}

((* endblock commands *))

